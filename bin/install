#!/bin/bash
#----------------------------------------------------------------------------------
#
#   Проект: Молот [molot]
# 
#   Файл установки пакета Молот на устройство
# 
#   Автор       : Железа
#   Email       : dev@zeleza.ru
#   Лицензия    : Apache Версия 2.0
#
#   Создан      : 27 октября 2024 год
#   Обновлен    : 30 октября 2024 год
# 
#----------------------------------------------------------------------------------

{
    git https://github.com/qzeleza/molot.git
    install_path=$(dirname $(readlink -f $0))
    echo 'alias molot="'${install_path}/molot/bin/molot'"' >> ~/.bash_aliases
    sources ~/.bash_aliases 
} && echo "Пакет Молот успешно установлен" || echo "Пакет Молот не установлен из-за возникших ошибок."
